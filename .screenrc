startup_message off
#defscrollback 3000
#msgwait 1
#nethack on
#bind s # remove the flow control garbage

#escape ^Zz

#bindkey -d -k kb stuff "\010"

#shelltitle '@|'
hardstatus alwayslastline '%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%<'

# Last line is status: green hostname, window list in cyan, and time and date right aligned:
# hardstatus alwayslastline "%{=b}%{G}%H: %{C}%w %=%{G}%D, %m/%d %C%a"

# fix for reconnecting to screen session with new ssh agent
setenv SSH_AUTH_SOCK "/tmp/ssh-agent-$USER-screen"

##   Initial Windows   ##
#screen 0
