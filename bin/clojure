#!/bin/bash

LOCAL_REPO=~/.m2/repository/org/clojure
REMOTE_REPO=http://build.clojure.org/releases/org/clojure
VERSION=1.2.0

if [ ! -e $LOCAL_REPO/clojure/$VERSION/clojure-$VERSION.jar ]; then
    mkdir -p $LOCAL_REPO/clojure/$VERSION/
    wget -P $LOCAL_REPO/clojure/$VERSION/ \
        $REMOTE_REPO/clojure/$VERSION/clojure-$VERSION.jar \
        $REMOTE_REPO/clojure/$VERSION/clojure-$VERSION.jar.md5 \
        $REMOTE_REPO/clojure/$VERSION/clojure-$VERSION.jar.sha1 \
        $REMOTE_REPO/clojure/$VERSION/clojure-$VERSION.pom \
        $REMOTE_REPO/clojure/$VERSION/clojure-$VERSION.pom.md5 \
        $REMOTE_REPO/clojure/$VERSION/clojure-$VERSION.pom.sha1
fi

if [ ! -e $LOCAL_REPO/clojure-contrib/$VERSION/clojure-contrib-$VERSION.jar ]; then
    mkdir -p $LOCAL_REPO/clojure-contrib/$VERSION/
    wget -P $LOCAL_REPO/clojure-contrib/$VERSION/ \
        $REMOTE_REPO/clojure-contrib/$VERSION/clojure-contrib-$VERSION.jar \
        $REMOTE_REPO/clojure-contrib/$VERSION/clojure-contrib-$VERSION.jar.md5 \
        $REMOTE_REPO/clojure-contrib/$VERSION/clojure-contrib-$VERSION.jar.sha1 \
        $REMOTE_REPO/clojure-contrib/$VERSION/clojure-contrib-$VERSION.pom \
        $REMOTE_REPO/clojure-contrib/$VERSION/clojure-contrib-$VERSION.pom.md5 \
        $REMOTE_REPO/clojure-contrib/$VERSION/clojure-contrib-$VERSION.pom.sha1
fi

exec rlwrap java -Xmx1g $JAVA_OPTS -cp $LOCAL_REPO/clojure/$VERSION/clojure-$VERSION.jar:$LOCAL_REPO/clojure-contrib/$VERSION/clojure-contrib-$VERSION.jar clojure.main $@
